<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--更改ActionBar的背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--设置状态栏的颜色-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!--去掉状态栏-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NoTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/welcome</item>
    </style>

    <style name="small_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="text_jump_bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/gray_jump_face_text</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="list_text_info">
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 列表用户头像的样式 -->
    <style name="UserFaceImageStyle">
        <item name="android:layout_width">40.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:padding">1.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">face</item>
        <item name="android:src">@mipmap/widget_dface</item>
    </style>


</resources>
