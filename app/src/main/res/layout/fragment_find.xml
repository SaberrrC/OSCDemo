<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#F6F6F6" />

    <TextView
        android:id="@+id/openSoftware"
        android:drawableRight="@mipmap/ic_arrow_right"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/ic_discover_softwares"
        android:drawablePadding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="开源软件"
        android:textColor="#000000"
        android:textSize="18dp" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#F6F6F6" />

    <TextView

        android:drawableRight="@mipmap/ic_arrow_right"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/ic_discover_find"
        android:drawablePadding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="找人"
        android:textColor="#000000"
        android:textSize="18dp"
        android:id="@+id/findUser"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#F6F6F6" />

    <TextView
        android:id="@+id/scan"
        android:drawableRight="@mipmap/ic_arrow_right"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/ic_discover_scan"
        android:drawablePadding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="扫一扫"
        android:textColor="#000000"
        android:textSize="18dp" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#F6F6F6" />

    <TextView
        android:id="@+id/shake"
        android:drawableRight="@mipmap/ic_arrow_right"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/ic_discover_shake"
        android:drawablePadding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="摇一摇"
        android:textColor="#000000"
        android:textSize="18dp" />




</LinearLayout>