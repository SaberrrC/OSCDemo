<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativeLayout_inforecommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_titel_inforecommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:text="ssssssssss"
        android:textColor="#9000"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/iv_inforecommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_titel_inforecommend"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_comment_30"/>

    <TextView
        android:id="@+id/tv_count_inforecommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/tv_titel_inforecommend"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/iv_inforecommend"
        android:text="6"/>

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_item_goto_right_tip"/>

    <TextView
        android:id="@+id/tv_underline_content"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:background="#E1E1E1"/>
</RelativeLayout>