<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <com.saberrr.openchina.ui.view.CircleImageView
        android:layout_margin="5dp"
        android:id="@+id/iv_find_touxiang"
        style="@style/UserFaceImageStyle" />
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#24CF5F"
            android:text="白菜"
            android:id="@+id/tv_find_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#C5C5C5"
            android:text="上海"
            android:id="@+id/tv_find_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_male"
        android:id="@+id/iv_find_gendar"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

</LinearLayout>