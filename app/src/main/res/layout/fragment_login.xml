<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <EditText
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_edittext_buttom_line"
        android:drawableBottom="@drawable/line_cursor"
        android:hint="邮箱/用户名"
        android:padding="@dimen/dp5"
        android:singleLine="true"
        android:textCursorDrawable="@drawable/line_cursor"
        />

    <EditText
        android:layout_margin="20dp"
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_edittext_buttom_line"
        android:drawableBottom="@drawable/line_cursor"
        android:hint="密码"
        android:inputType="textPassword"
        android:padding="@dimen/dp5"
        android:singleLine="true"
        android:textCursorDrawable="@drawable/line_cursor"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="#fff"
        android:background="@drawable/select_btn_bg"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="还可以使用其他账号登录"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="@dimen/dp20"
            android:id="@+id/iv_qq"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/share_icon_qq"/>
        <ImageView
            android:layout_marginLeft="@dimen/dp20"
            android:id="@+id/iv_wechat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/share_icon_wechat"/>

        <ImageView
            android:id="@+id/iv_weibo"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/share_icon_sinaweibo"/>

    </LinearLayout>

</LinearLayout>