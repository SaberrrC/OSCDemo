<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic"
            style="@style/small_button"
            android:src="@mipmap/ic_tweet_picture_normal"/>

        <ImageView
            android:id="@+id/iv_at"
            style="@style/small_button"
            android:src="@mipmap/ic_tweet_mention_normal"/>

        <ImageView
            android:id="@+id/iv_topic"
            style="@style/small_button"
            android:src="@mipmap/ic_tweet_topic_normal"/>

        <ImageButton
            android:id="@+id/iv_face"
            style="@style/small_button"
            android:src="@mipmap/btn_emoji_normal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_faces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <android.support.v4.view.ViewPager
            android:id="@+id/vp_faces"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_qq"
                    style="@style/text_jump_bottom"
                    android:layout_weight="3"
                    android:text="QQ表情"/>

                <TextView
                    android:id="@+id/tv_emoji"
                    style="@style/text_jump_bottom"
                    android:layout_weight="3"
                    android:text="Emoji表情"/>

                <ImageView
                    android:id="@+id/iv_del"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:src="@drawable/btn_del"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>