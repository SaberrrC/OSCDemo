<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="今天想动弹什么？">
            </EditText>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="5dp"
                android:textSize="12sp"
                android:text="-100"
                android:background="@drawable/selector_junp_hint_bg"
                android:textColor="@color/red"/>

            <com.saberrr.openchina.ui.view.FlowLayout
                android:id="@+id/fl_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.saberrr.openchina.ui.view.FlowLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic"
            style="@style/small_button"
            android:src="@mipmap/ic_tweet_picture_normal"/>

        <ImageView
            android:id="@+id/iv_at"
            style="@style/small_button"
            android:src="@mipmap/ic_tweet_mention_normal"/>

        <ImageView
            android:id="@+id/iv_topic"
            style="@style/small_button"
            android:src="@mipmap/ic_tweet_topic_normal"/>

        <ImageButton
            android:id="@+id/iv_face"
            style="@style/small_button"
            android:src="@mipmap/btn_emoji_normal"/>
    </LinearLayout>
</LinearLayout>