<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_main"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    >
    <TextView
        android:id="@+id/tv_left_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"/>
    <!--中间标题-->
    <TextView
        android:id="@+id/tv_title_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"/>
    <!--右边搜索图标-->
    <ImageView
        android:id="@+id/iv_right_icon_toolbar"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_gravity="right"
        android:padding="15sp"
        android:visibility="gone"/>
    <!--右边书本和评论图标-->
    <FrameLayout
        android:id="@+id/fl_commend"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="right"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_commend_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="17dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="18dp"
            android:src="@drawable/ic_menu_comment"/>

        <TextView
            android:id="@+id/tv_commend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="120"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </FrameLayout>

    <!--右边发送-->
    <TextView
        android:id="@+id/tv_right_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15sp"
        android:gravity="center"
        android:text="发送"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"/>


</android.support.v7.widget.Toolbar>